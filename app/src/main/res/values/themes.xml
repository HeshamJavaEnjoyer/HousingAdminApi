<resources>
    <!-- Base application theme. -->
    <style name="Theme.Housing" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_pool</item>
        <item name="colorPrimaryVariant">@color/far_sky</item>
        <item name="colorOnPrimary">@color/sugar_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/old_ice</item>
        <item name="colorSecondaryVariant">@color/faze_sea</item>
        <item name="colorOnSecondary">@color/footer_flame</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/special_gray</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/sans_ara_semi_bold</item>


    </style>

    <!--For the progressBar-->
    <style name="progressBarTheme" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/sugar_white</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>

        <item name="fontFamily">@font/sans_ara_semi_bold</item>

    </style>
</resources>